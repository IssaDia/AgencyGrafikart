{% extends "base.html.twig" %}

{% block title %}Nos biens
{% endblock %}

{% block body %}
<div class='jumbotron'>
	<div class='container'>
	 	{{ form_start(form)}}
		 <div class='form-row'>
		 	<div class='col'>
			 {{ form_row(form.minSurface)}}
			</div>
			<div class='col'>
			 {{ form_row(form.maxPrice)}}
			</div>
			<div class='col'>
			<button class='btn btn-primary'>Rechercher</button>
			</div>
		</div>
		 {{ form_end(form)}}
	<div class='container mt-4'>
		<h1>Biens!!!</h1>
		<div class='row'>
			{% for property in properties %}
				<div class='col-md-4'>
					{% include "property/property.html.twig" %}
				</div>
			{% endfor %}
		</div>

		<div class="navigation">
			{{ knp_pagination_render(properties) }}
		</div>

	</div>


{% endblock %}
